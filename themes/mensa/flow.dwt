                    <td align="right" width="35%"><strong>{$lang.username}：</strong></td>
                    <td><input name="username" type="text" class="input_a" id="username" onblur="is_registered(this.value);" /><br />
            <span id="username_notice"></span></td>
                  </tr>
                  <tr>
                    <td align="right"><strong>{$lang.email_address}：</strong></td>
                    <td><input name="email" type="text" class="input_a" id="email" onblur="checkEmail(this.value);" /><br />
            <span id="email_notice"></span></td>
                  </tr>
                  <tr>
                    <td align="right"><strong>{$lang.password}：</strong></td>
