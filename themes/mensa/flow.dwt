  <script type="text/javascript">

      /*****商品数量增减*******/
      function plus(rec)
      {
          var tt = "goods_number_"+rec;
          var oP = document.getElementById(tt);
          oP.value++;
          //var num = oP.value++;
          //alert(rec);
          //num = oP.value++;
          changePrice(oP.value,rec);
      }
      function minus(rec)
      {
          var tt = "goods_number_"+rec;
          var oP = document.getElementById(tt);
          //var num = oP.value--;
          oP.value--;
          if(oP.value<1){
              oP.value=1;
              return;
          }
          changePrice(oP.value,rec);
      }

      /**
       * 點選可選屬性或改變數量時修改商品價格的函數
       */
      function changePrice(number,rec_id)
      {
          //var attr = getSelectedAttributes(document.forms['ECS_FORMBUY']);
          // var qty = document.forms['ECS_FORMBUY'].elements['number'].value;
          //alert(rec_id);
          //var ttt = "goods_number_"+rec_id;

          //document.getElementById(ttt).innerHTML = res.result;
          Ajax.call('flow.php', 'step=update_cart_ajax&rec_id=' + rec_id +'&number=' + number, changePriceResponse, 'GET', 'JSON');
      }
      /**
       * 接收返回的信息
       */
      function changePriceResponse(res)
      {
          document.getElementById('goods_number_' + res.rec_id).value = res.goods_number;
          if (res.error > 0)
          {
              alert(res.content);
          }
          else
          {
              document.getElementById('subtotal_'+res.rec_id).innerHTML = res.subtotal;//商品小計
              document.getElementById('cart_amount_desc').innerHTML = res.cart_amount_desc;//購物車商品總價說明
			  {if $show_marketprice}
              document.getElementById('market_amount_desc').innerHTML = res.market_amount_desc;//購物車商品總市價說明
			  {/if}
              //更新購物車區塊 (若你的購物流程頁面沒有包含 /{/insert name='cart_info'/}/ 的話，則不需要放這段)
              //var cartInfo = document.getElementById('ECS_CARTINFO');
              //if (cartInfo)
              //{
              //cartInfo.innerHTML = res.content;
              //}
          }
      }
  </script>





