    function show_group(id) {
        var id = parseInt(id)
        var start = id<7?1:id-7;
        var end = id;
        $('div.groupon_other ul li').hide();
        $('div.groupon_other ul li').each(function(){
            var sid = $(this).attr('id');
            //console.log('-----' + id)
            if(sid>start && sid <= end) {
                //console.log("===hide " + sid)
                $(this).show();
            }


        });

